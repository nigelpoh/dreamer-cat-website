  <a href="{{ card_collection.url }}" class="flex flex-col items-center p-8 {{card_collection.metafields.custom.background_color.value}} rounded-3xl transition h-full">
    <div class = "flex flex-col w-full">
    {%- if card_collection.featured_image -%}

      <div class="relative w-full pb-[75%] h-3/4 rounded-3xl overflow-hidden">
        <img
          src="{{ card_collection.featured_image | image_url: width: 400 }}"
          alt="{{ card_collection.featured_image.alt | escape }}"
          width="{{ card_collection.featured_image.width }}"
          height="{{ card_collection.featured_image.height }}"
          class="absolute inset-0 h-full object-cover transition-transform transform hover:scale-105"
        >
      </div>
    {%- else -%}
      {{ 'product-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}

        <h3 class=" mt-4 w-full py-6 text-3xl font-bold text-bg font-body flex items-center space-x-8">
          <span>{{ card_collection.title | upcase }}</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-10 h-10">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
          </svg>
        </h3>
    </div>
    </a>

