{% comment %}

Renders the product's rating stars

Accepts:
- product: {Object} Product Liquid object (optional)

Usage:
{% render 'rating-star', product: product %}

{% endcomment %}

{%- liquid
    assign review_prod = product
    unless section.settings.product == null
        assign review_prod = section.settings.product
    endunless
-%}

<div class="flex items-center md:py-2 py-6">
    <div class="flex flex-row items-center">
    {% for i in (1..5) %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-8 w-8 fill-hl-yellow stroke-hl-yellow {% if forloop.index < 5 %}mr-1{% endif %}">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
        </svg>
    {% endfor %}
    <span class="ml-3 text-[1.6rem] font-medium font-body text-black mt-1">
        {{ review_prod.metafields.ba_rev.review_data.reviews_count }} reviews
    </span>
    </div>
</div>