  <div id="CartDrawer" class="cart-drawer">
    <div id="CartDrawer-Overlay" class="cart-drawer__overlay"></div>
    <div
      class="drawer__inner bg-bg font-body"
      role="dialog"
      aria-modal="true"
      aria-label="{{ 'sections.cart.title' | t }}"
      tabindex="-1"
    >
      {%- if cart == empty -%}
        <div class="drawer__inner-empty">
          <h2 class="drawer__heading font-display font-black uppercase text-pri-head text-4xl mt-8">{{ 'sections.cart.title' | t }}</h2>
          {% if discount_to_urge != blank %}
            <div class = "w-full flex flex-row items-center bg-hl-lighter-yellow px-8 py-4 font-body rounded-xl my-8">
