{% comment %}
  Renders cart drawer

  Usage:
  {% render 'cart-drawer' %}
{% endcomment %}

{{ 'quantity-popover.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>

<style>
  .drawer {
    visibility: hidden;
  }
</style>

{%- liquid
  assign discount_to_urge = blank
  assign discount_passed = blank
  if settings.cart_drawer_discounts != blank
    assign discounts = settings.cart_drawer_discounts | sort: "value.quantity"
    for disc in discounts
      if disc.quantity > cart.item_count 
        assign discount_to_urge = disc
        break
      endif
      assign discount_passed = disc
    endfor
  endif 
-%}

