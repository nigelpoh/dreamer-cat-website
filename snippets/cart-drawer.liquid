                </svg>
              </span>
              {% assign quantity_needed = discount_to_urge.quantity | minus: cart.item_count %}
              <h5 class = "font-body font-bold text-hl-red w-full text-center">Buy {{ quantity_needed }} and get {{ discount_to_urge.discount }} off!</h5>
            </div>
          {% endif %}
          <div class="cart-drawer__warnings center{% if settings.cart_drawer_collection != blank %} cart-drawer__warnings--has-collection{% endif %}">
            <div class="cart-drawer__empty-content">
              <button
                class="drawer__close"
                type="button"
                onclick="this.closest('cart-drawer').close()"
                aria-label="{{ 'accessibility.close' | t }}"
              >
                <span class="svg-wrapper">
                  {{- 'icon-close.svg' | inline_asset_content -}}
                </span>
              </button>
        
              <a href="{{ routes.collections_url }}" class="button transition duration-300 bg-neutral-800 w-4/5 text-center font-body text-bg capitalize text-xl font-bold py-5 px-12 rounded-xl hover:bg-hl-green">
                {{ 'general.continue_shopping' | t }}
              </a>

              {%- if shop.customer_accounts_enabled and customer == null -%}
                <p class="cart__login-title h3">{{ 'sections.cart.login.title' | t }}</p>
                <p class="cart__login-paragraph">
                  {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
                </p>
              {%- endif -%}
            </div>
          </div>
          {%- if settings.cart_drawer_collection != blank -%}
            <div class="cart-drawer__collection">
              {% render 'card-collection', card_collection: settings.cart_drawer_collection, columns: 1 %}
            </div>
          {%- endif -%}
          <div class = "grid grid-cols-2 gap-4 mt-8">
            <div class = "flex flex-col items-center">
              {{ settings.delivery_image | image_url: width: 100 | image_tag: class: 'w-24 mb-4' }}
              <div class = "font-body text-[1.7rem] font-semibold text-neutral-800 text-center">Free Shipping</div>
              <div class = "font-body text-lg font-semibold text-neutral-400 text-center">Worldwide</div>
            </div>
            <div class = "flex flex-col items-center">
              {{ settings.return_image | image_url: width: 100 | image_tag: class: 'w-24 mb-4' }}
              <div class = "font-body text-[1.7rem] font-semibold text-neutral-800 text-center">14 Days Return</div>
              <div class = "font-body text-lg font-semibold text-neutral-400 text-center">From Day of Delivery</div>
            </div>
          </div>
          <div class = "flex flex-col items-center w-full bg-hl-lighter-blue py-8 px-12 rounded-xl mb-8">
            <div class = "flex flex-row justify-around w-full mb-4 flex-wrap">
              {%- for type in shop.enabled_payment_types -%}
                <div class="list-payment__item">
                  {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                </div>
              {%- endfor -%}
            </div>
            <div class = "font-body text-base text-neutral-800 font-medium">Accepted Payments</div>
          </div>
        </div>
      {%- endif -%}
      <div class="drawer__header">
        <h2 class="drawer__heading font-display font-black uppercase text-pri-head text-4xl my-8">{{ 'sections.cart.title' | t }}</h2>
        <button
          class="drawer__close"
          type="button"
          onclick="this.closest('cart-drawer').close()"
          aria-label="{{ 'accessibility.close' | t }}"
        >
          <span class="svg-wrapper">
            {{- 'icon-close.svg' | inline_asset_content -}}
          </span>
        </button>
      </div>
      <cart-drawer-items
        class = "flex flex-col justify-between {% if cart == empty %}is-empty hidden{% endif %}"
      >
        <form
          action="{{ routes.cart_url }}"
          id="CartDrawer-Form"
          class="cart__contents cart-drawer__form"
          method="post"
        >
          {% render 'cart-progress-bar' %}
          {% if discount_to_urge != blank %}
            <div class = "w-full flex flex-row items-center bg-hl-lighter-yellow px-8 py-4 font-body rounded-xl mb-8">
              <span class="relative flex h-16 w-16">
                <span class="animate-ping-slower absolute inline-flex h-full w-full rounded-full bg-hl-yellow opacity-30"></span>
